#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
RUN_DIR="$ROOT_DIR/.run"
LOG_DIR="$RUN_DIR/logs"

mkdir -p "$RUN_DIR" "$LOG_DIR"

port_in_use() {
  local port="$1"
  ss -ltn 2>/dev/null | grep -q ":${port} "
}

start_process() {
  local name="$1"
  local pid_file="$2"
  local command="$3"
  local port="$4"

  if [[ -f "$pid_file" ]]; then
    local existing_pid
    existing_pid="$(cat "$pid_file")"
    if kill -0 "$existing_pid" 2>/dev/null; then
      echo "$name already running (pid $existing_pid)."
      return
    else
      rm -f "$pid_file"
    fi
  fi

  if port_in_use "$port"; then
    echo "Port $port already in use. Skipping $name startup."
    return
  fi

  echo "Starting $name..."
  nohup bash -lc "$command" > "$LOG_DIR/${name}.log" 2>&1 &
  local pid=$!
  echo "$pid" > "$pid_file"

  sleep 2
  if kill -0 "$pid" 2>/dev/null && port_in_use "$port"; then
    echo "$name started (pid $pid, port $port)."
  else
    echo "Failed to start $name. Check $LOG_DIR/${name}.log"
    rm -f "$pid_file"
  fi
}

start_process "backend" "$RUN_DIR/backend.pid" "cd '$ROOT_DIR/backend' && npm run dev" 5000
start_process "frontend" "$RUN_DIR/frontend.pid" "cd '$ROOT_DIR/frontend' && npm run dev -- --hostname 0.0.0.0 --port 3000" 3000

echo
echo "Backend:  http://localhost:5000"
echo "Frontend: http://localhost:3000"
echo "Admin:    http://localhost:3000/admin"
echo
echo "Logs: $LOG_DIR"
echo "Stop everything with: ./stop.sh"
